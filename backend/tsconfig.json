{
    "compilerOptions": {
      "target": "ES6",
      "module": "CommonJS",
      "outDir": "./dist",
      "moduleResolution": "Node",
      "strict": true,
      "esModuleInterop": true,                       
      "forceConsistentCasingInFileNames": true,       
      "paths": {
        "@/*": ["./src/*"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"],
    "ts-node": {
      "transpileOnly": true,
    },
}